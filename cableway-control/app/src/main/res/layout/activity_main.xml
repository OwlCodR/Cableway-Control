<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    layout_width="match_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                tools:context=".MainActivity">

                <Switch
                    android:id="@+id/switchTurnOnBluetooth"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_margin="20dp"
                    android:text="Bluetooth"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="20dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/progressBarSearch"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/buttonStartSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:text="Поиск"
                        android:textColor="@android:color/background_light"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imageViewCableway"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="2dp"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/cableway" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:text="Скорость: 1000"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <SeekBar
                    android:id="@+id/seekBarSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="9"
                    android:paddingStart="80dip"
                    android:paddingTop="20dp"
                    android:paddingEnd="80dip"
                    android:paddingBottom="20dp"
                    android:progress="9"
                    android:scrollbarSize="10dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/linearLayoutButtons"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/buttonMotor1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="М1"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/buttonMotor2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="М2"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/buttonMotor3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="М3"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/buttonMotor4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="M4"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
